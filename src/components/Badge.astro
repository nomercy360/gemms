---
interface Props {
    text: string
    className?: string
}

const {text, className} = Astro.props;
import {twMerge} from "tailwind-merge";
---
<span class={twMerge('badge', className)}>
    {text}
</span>


<style>
    .badge {
        border-radius: 50px;
        border: 0.5px solid rgba(255, 255, 255, 0.20);
        background: linear-gradient(180deg, rgba(255, 255, 255, 0.10) 0%, rgba(255, 255, 255, 0.00) 50%);
        backdrop-filter: blur(10px);
        display: inline-flex;
        padding: 12px 20px;
        justify-content: center;
        align-items: center;
        gap: 10px;
        color: #FFF;
        text-align: center;
        font-size: 20px;
        font-style: normal;
        font-weight: 400;
        line-height: 20px;
    }
</style>