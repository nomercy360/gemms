---
import { twMerge } from "tailwind-merge";
interface Props {
  text: string;
  className?: string;
}

const { text, className } = Astro.props;
---

<span class={twMerge("badge", className)}>
  {text}
</span>

<style>
  .badge {
    border-radius: 50px;
    border: 0.5px solid rgba(255, 255, 255, 0.2);
    background: linear-gradient(
      180deg,
      rgba(255, 255, 255, 0.1) 0%,
      rgba(255, 255, 255, 0) 50%
    );
    backdrop-filter: blur(10px);
    display: inline-flex;
    padding: 12px 20px;
    justify-content: center;
    align-items: center;
    gap: 10px;
    color: #fff;
    text-align: center;
    font-size: 20px;
    font-style: normal;
    font-weight: 400;
    line-height: 20px;
  }
</style>
