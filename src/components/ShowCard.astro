---
interface Props {
    text: string;
    description: string;
    bottomText: string;
    bottomDescription: string;
}

const {text, description, bottomText, bottomDescription} = Astro.props;
---

<div class="flex flex-col justify-between md:py-5 py-4 md:pl-4 pl-3 md:pr-8 pr-6 md:h-[400px] h-[280px] bg-white/10">
    <div>
        <h3 class="md:text-[20px] text-[16px] md:leading-[24px] leading-[20px] text-white">
            {text}
        </h3>
        <p class="md:text-[16px] text-[12px] md:leading-[22px] leading-[17px] text-[#6F6F6F]">
            {description}
        </p>
    </div>
    <div>
        <h3 class="md:text-[40px] text-[24px] md:leading-[40px] leading-[24px] text-white">
            {bottomText}
        </h3>
        <p class="md:text-[12px] text-[12px] md:leading-[16px] leading-[16px] text-[#6F6F6F]">
            {bottomDescription}
        </p>
    </div>
</div>