---
interface Props {
    title: string;
    description: string;
}

const {title, description} = Astro.props;
---
<div class="flex flex-col justify-start md:py-5 py-4 md:pl-4 pl-3 md:pr-8 pr-6 gap-2 md:min-h-[400px] min-h-[280px] bg-white/10 md:col-span-1 col-span-2">
    <h4 class="md:text-[20px] text-[16px] md:leading-[24px] leading-[20px] text-white">
        {title}
    </h4>
    <p class="md:text-[16px] text-[12px] md:leading-[22px] leading-[17px] text-[#6F6F6F]">
        {description}
    </p>
</div>