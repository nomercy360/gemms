---
import {Icon} from "astro-icon/components";
interface Props {
    title: string;
}

const {title} = Astro.props;
import {ViewTransitions} from 'astro:transitions';
---

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8"/>
    <meta name="viewport" content="width=device-width, initial-scale=1.0, maximum-scale=1.0, user-scalable=no">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">

    <link rel="icon" href="/gem.png" type="image/png"/>
    <meta name="description"
          content="Gemss is a collective of entrepreneurs offering speed-first growth services and outsource subscription for startups. Get recognizable brands, effective ads, pitch decks, and more.">
    <meta name="keywords"
          content="Gemss, Startup Agency, Growth Services, Branding, Facebook Ads, Google Ads, Pitch Decks, Subscription-based Product Design, Development">
    <meta property="og:title" content="Welcome to Gemss - Speed-first Growth Services for Startups">
    <meta property="og:description"
          content="Gemss is a collective of entrepreneurs offering speed-first growth services and outsource subscription for startups.">
    <meta property="og:image" content="/og.png">
    <meta property="og:url" content="https://gemss.xyz">
    <meta property="og:type" content="website">

    <meta name="twitter:card" content="summary_large_image">
    <meta name="twitter:title" content="Welcome to Gemss - Speed-first Growth Services for Startups">
    <meta name="twitter:description"
          content="Gemss is a collective of entrepreneurs offering speed-first growth services and outsource subscription for startups.">
    <meta name="twitter:image" content="/twitter.png">

    <!-- Canonical URL (to avoid duplicate content issues) -->
    <link rel="canonical" href="https://gemss.xyz">

    <meta name="generator" content={Astro.generator}/>
    <title>{title}</title>
    <ViewTransitions/>
</head>
<body>
<slot/>
</body>
</html>
<style is:global>
    body {
        font-family: Inter, sans-serif;
    }

    @font-face {
        font-display: swap;
        font-family: 'New Spirit';
        font-style: normal;
        font-weight: 300;
        src: url('/fonts/NewSpiritTRIAL-Light.woff2') format('woff2');
    }

    h1, h2 {
        font-family: 'New Spirit', serif;
        font-weight: 300;
    }
</style>
